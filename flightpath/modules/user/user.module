      "value" => "<tr><td colspan='$col_count' class='perm-module-name'>" . $disp_module . " " . t("module") . "</td></tr>",
    );   

      
    if ($mcount == 0) {
      
      // Draw the headers...
      $form["mark" . $m++] = array(
        "value" => "<tr class='headers'><th class='permission-name-and-desc'>" . t("Permission") . "</th>",
      );  
      foreach ($roles as $key => $role) {
